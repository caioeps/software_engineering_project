$(document).ready(function() {
  map = new GMaps({
    div: '#map',
    lat: -3.7572221,
    lng: -38.5356611,
    zoom: 13
  });

  occurrences = loadMarkers();
});

function loadMarkers() {
  return $.ajax({
    type: 'GET',
    url: '<%= Rails.application.routes.url_helpers.occurrences_url(format: :json) %>',
    datatype: 'json'
  }).responseJSON;
}
